<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>AddNewCategory</servlet-name>
        <servlet-class>pl.polsl.lab.servlets.AddNewCategory</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShowCategories</servlet-name>
        <servlet-class>pl.polsl.lab.servlets.ShowCategories</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddNewTask</servlet-name>
        <servlet-class>pl.polsl.lab.servlets.AddNewTask</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShowTasks</servlet-name>
        <servlet-class>pl.polsl.lab.servlets.ShowTasks</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TasksIndex</servlet-name>
        <servlet-class>pl.polsl.lab.servlets.TasksIndex</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>index</servlet-name>
        <jsp-file>/index.html</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>DeleteDoneTasks</servlet-name>
        <servlet-class>pl.polsl.lab.servlets.DeleteDoneTasks</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShowDeletedTasks</servlet-name>
        <servlet-class>pl.polsl.lab.servlets.ShowDeletedTasks</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddNewCategory</servlet-name>
        <url-pattern>/AddNewCategory</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShowCategories</servlet-name>
        <url-pattern>/ShowCategories</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddNewTask</servlet-name>
        <url-pattern>/AddNewTask</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShowTasks</servlet-name>
        <url-pattern>/ShowTasks</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TasksIndex</servlet-name>
        <url-pattern>/TasksIndex</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>index</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteDoneTasks</servlet-name>
        <url-pattern>/DeleteDoneTasks</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShowDeletedTasks</servlet-name>
        <url-pattern>/ShowDeletedTasks</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
